@using Newtonsoft.Json
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BusinessObject.Model.DataResult

@{
    var homeModel = Model.Result as BusinessObject.Model.Page.HomeModel;
    var specialSale = homeModel?.specialSale;
    var mouse = homeModel?.mouse;
    var keyboard = homeModel?.keyboard;

    var serializedList = Context.Session.GetString("HeaderData");

    // Deserialize the JSON string into a list
    var headerData = JsonConvert.DeserializeObject<BusinessObject.Model.Page.HeaderModel>(serializedList);

    var brandList = headerData.brand;
}

<script>
    var usernameView = '@ViewBag.Username';
